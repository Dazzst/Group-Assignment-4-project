<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Google fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />

    <!-- locally defined CSS -->
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />

    <style>
        footer {
            display: block;
            background-color: 2B66B6;
            text-align: center;
            color: #c2b163;
            position: fixed;
            bottom: 0px;
        }
    </style>

</head>

<body>
    <nav class="navbar navbar-expand navbar-custom">
        <ul class="navbar-nav mr-auto font-weight-bold">

            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>
            </li>

            <li class="nav-item">
                <a asp-controller="Home" asp-action="Parks" class="btn btn-primary">Park</a>
            </li>
            
            <li class="nav-item">
                <a asp-controller="Home" asp-action="AboutUs" class="btn btn-primary">About Us</a>
            </li>
        </ul>
    </nav>
 

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <a href="https://www.nps.gov/subjects/developer/index.htm" target="_blank">Source Data</a> | <a href="https://github.com/" target="_blank">Github</a> | <a href="https://github.com/Fantastic-Five-for-CSharp/Group-Assignment-4">Contact Us</a> | <a asp-controller="Privacy" asp-action="Index">Privacy</a>
        <br />
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
